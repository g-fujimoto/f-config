{
    "extends": "eslint:recommended",
    "env": {
        "browser" : true,
        "es6"     : true,
        "node"    : true,
        "amd"     : true,
        "mocha"   : true
    },
    "globals" : {
        "angular"         : true,
        "_"               : true,
        "google"          : true,
        "AjaxZip3"        : true,
        "ons"             : true,
        "NCMB"            : true,
        "ncmb"            : true,
        "key"             : true,
        "app"             : true,
        "ons"             : true,
        "NoticeNavigator" : true,
        "AuthNavigator"   : true,
        "UserNavigator"   : true,
        "AppSlidingMenu"  : true
    },
    "ecmaFeatures": {
        "modules": true
    },
    "rules": {
        "semi"                   : 2,
        "arrow-parens"           : 2,
        "arrow-parens"           : 2,
        "arrow-spacing"          : 2,
        "constructor-super"      : 2,
        "generator-star-spacing" : 2,
        "no-class-assign"        : 2,
        "no-const-assign"        : 2,
        "no-dupe-class-members"  : 2,
        "no-this-before-super"   : 2,
        "object-shorthand"       : 2,
        "prefer-spread"          : 2,
        "prefer-template"        : 1,
        "require-yield"          : 2,
        "no-unused-vars"         : [0, {"vars" : "all", "args" : "after-used"} ],
        "prefer-arrow-callback"  : 1,
        "no-console"             : 0,
        "no-var"                 : 0,
        "no-undef"               : 0
    }
}
